# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Bash and Shell scripts
[*.{bash,sh}]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

[{package.json,*.yml}]
indent_style = space
indent_size = 2
